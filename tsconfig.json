{
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "react",
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}